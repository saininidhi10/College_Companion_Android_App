<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
  >
 <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="@string/len" 
        android:textSize="15sp"/>

        <Button
            android:id="@+id/bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:text="GET" 
            android:background="#00CCFF"/>

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t1"
            android:layout_alignTop="@+id/t1" >

            <RadioButton
                android:id="@+id/raB1"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="g to kg" />

            <RadioButton
                android:id="@+id/raB2"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="kg to g" />

            <RadioButton
                android:id="@+id/raB3"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="kg to tonnes" />

            <RadioButton
                android:id="@+id/raB4"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="tonnes to kg" />

            <RadioButton
                android:id="@+id/raB5"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="kg to pound" />

            <RadioButton
                android:id="@+id/raB6"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="pound to kg" />
        </RadioGroup>
   

</RelativeLayout>
</ScrollView>
